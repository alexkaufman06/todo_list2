<h1>Add a task to <%= @list.name() %> </h1>

<form action="/tasks" method="post">
  <input id="list_id" name="list_id" type="hidden" value="<%= @list.id() %>">

  <label for="description">Description of the task:</label>
  <input id="description" name="description" type="text" required>
<br>
  <label for="due_date">Due Date:</label>
  <input id="due_date" name="due_date" type="text" required>
<br>
  <button type="submit" class="btn btn-success">Add task</button>
</form>

<% if @list.tasks().any?() %>
  <h3>Here are all the tasks in this list:</h3>

  <ul>
    <% @list.tasks().each() do |task| %>
      <li><strong>Task:</strong> <%= task.description() %><br> <strong>Due Date:</strong> <%= task.due_date() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no tasks yet!</p>
<% end %>

<a href="/">Return to Main Page</a>
